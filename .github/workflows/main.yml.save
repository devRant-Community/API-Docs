name: Build and Deploy

on:
  push:
    branches:
      - master

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
    steps:
    - name: Checkout ðŸ›Žï¸
      uses: actions/checkout@v2
      with:
        persist-credentials: false

    - name: Setup ðŸ”§
      uses: actions/setup-node@v1.4.2
    - name: Install â™»
      run: npm install
    - name: Build ðŸ—
      run: npm run build
    - name: Create CNAME ðŸ”—
      run: echo "mindmap.skayo.dev" > ./dist/CNAME
    - name: Copy index.html ðŸ“‹
      run: sed -i 's/dist//x.html ./dist/
    - name: Deploy ðŸš€
      uses: JamesIves/github-pages-deploy-action@3.5.3
      with:
        ACCESS_TOKEN: ${{ secrets.ACCESS_TOKEN }}
        BRANCH: gh-pages
        FOLDER: dist
        GIT_CONFIG_NAME: SkayoBot
        GIT_CONFIG_EMAIL: frederike.gnampf@gmail.com
